{
  "name": "vscode-commands-executor",
  "displayName": "Commands Executor",
  "description": "Enables the execution of vscode commands on open startup vscode via the vscode:// URI, keyboard shortcuts and based on workspace conditions.",
  "version": "1.1.0",
  "publisher": "ionutvmi",
  "engines": {
    "vscode": "^1.73.0"
  },
  "author": {
    "name": "Mihai Vilcu"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "CLI",
    "Command Line",
    "Terminal",
    "Commands"
  ],
  "icon": "images/icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "Commands Executor",
      "description": "Configurations for the command executor execution.",
      "type": "object",
      "properties": {
        "vscode-commands-executor.startupRules": {
          "type": "array",
          "title": "Startup Commands Rules",
          "default": [],
          "items": {
            "type": "object",
            "properties": {
              "commands": {
                "type": [
                  "array"
                ],
                "description": "Commands to run when the rule is matched",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "description": "The id of the command that will be executed"
                    },
                    "args": {
                      "type": "array",
                      "description": "The arguments that will be passed to the command"
                    }
                  }
                }
              },
              "conditions": {
                "type": [
                  "array"
                ],
                "description": "List of conditions to match against. Supported: always, never, hasFile: **/file.txt, hasWorkspaceFolder: my-project"
              },
              "message": {
                "type": "string",
                "description": "A descriptive message to show when the condition is met."
              }
            }
          }
        }
      }
    }
  },
  "bugs": {
    "url": "https://github.com/ionutvmi/vscode-commands-executor/issues",
    "email": "ionutvmi@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ionutvmi/vscode-commands-executor.git"
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "1.73.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "5.43.0",
    "@typescript-eslint/parser": "5.43.0",
    "eslint": "8.28.0",
    "typescript": "4.9.3"
  }
}
